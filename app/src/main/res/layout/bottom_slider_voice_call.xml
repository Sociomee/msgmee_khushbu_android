<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/grey_curv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <View
            android:layout_width="80dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:background="#E4E4E4" />

        <LinearLayout
          android:paddingTop="60dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="25dp">

            <RelativeLayout
                android:id="@+id/add"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/grey_circle">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_baseline_person_add_24"
                    android:backgroundTint="#566482" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="Add participants"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="17dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="#E4E4E4" />


     <RelativeLayout
         android:layout_marginTop="10dp"
         android:paddingHorizontal="25dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentStart="true"
             android:layout_centerInParent="true"
             android:orientation="horizontal">

             <RelativeLayout
                 android:layout_width="60dp"
                 android:layout_height="60dp"
                 android:backgroundTint="#566482"
                 android:background="@drawable/grey_circle">

                 <ImageView
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_centerInParent="true"
                     android:src="@drawable/pic" />
             </RelativeLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_marginStart="15dp"
                 android:orientation="vertical">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:fontFamily="@font/poppins_bold"
                     android:gravity="center"
                     android:text="Saurabh"
                     android:textColor="@color/black"
                     android:textFontWeight="600"
                     android:textSize="17dp" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:fontFamily="@font/niramit_semibold"
                     android:gravity="center"
                     android:text="00:10:05"
                     android:textColor="@color/light_green"
                     android:textFontWeight="400"
                     android:textSize="13dp" />

             </LinearLayout>
         </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentEnd="true"
             android:layout_centerInParent="true"
             android:orientation="horizontal">


             <RelativeLayout
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:background="@drawable/grey_circle"
                 android:backgroundTint="#E3F4EA">

                 <ImageView
                     android:layout_width="15dp"
                     android:layout_height="15dp"
                     android:layout_centerInParent="true"
                     android:src="@drawable/close_cam" />
             </RelativeLayout>

             <RelativeLayout
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:layout_marginStart="10dp"
                 android:background="@drawable/grey_circle"
                 android:backgroundTint="#E3F4EA">

                 <ImageView
                     android:layout_width="15dp"
                     android:layout_height="15dp"
                     android:layout_centerInParent="true"
                     android:src="@drawable/mic_off" />
             </RelativeLayout>

             <RelativeLayout
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:layout_marginStart="10dp"
                 android:background="@drawable/grey_circle"
                 android:backgroundTint="#FC2447">

                 <ImageView
                     android:layout_width="15dp"
                     android:layout_height="15dp"
                     android:layout_centerInParent="true"
                     android:src="@drawable/cut" />
             </RelativeLayout>
         </LinearLayout>
     </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="#E4E4E4" />


        <!--    Footer  -->
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:weightSum="4"
            android:paddingHorizontal="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/grey_circle">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/speaker_on" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/grey_circle">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/close_cam" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:backgroundTint="#FC2447"
                android:background="@drawable/grey_circle">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/cut" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/grey_circle">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/mic_off" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>