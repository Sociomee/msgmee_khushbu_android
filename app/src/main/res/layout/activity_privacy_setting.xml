<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings.Privacy_Setting">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >


            <LinearLayout
                android:id="@+id/linear_privacy_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <RelativeLayout
                    android:id="@+id/chats_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    >


                    <ImageView
                        android:id="@+id/back_arr"
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:outlineAmbientShadowColor="@color/black"
                        android:src="@drawable/ic_baseline_arrow_back_ios_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/back_arr"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Privacy Settings "
                        android:textColor="@color/black"
                        android:textFontWeight="500"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </RelativeLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:elevation="10dp"
                    android:background="#E0E0E0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/chats_setting"/>

            </LinearLayout>









            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_lastseen"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear_privacy_setting">




                <TextView
                    android:id="@+id/text_lastseen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Seen "
                    android:textSize="16sp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginLeft="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Everyone"
                    app:layout_constraintStart_toStartOf="@+id/text_lastseen"
                    app:layout_constraintTop_toBottomOf="@+id/text_lastseen"
                    android:textColor="#555555"
                    android:textSize="11sp"
                    android:layout_marginTop="-4dp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/poppins_regular"
                    />

                <ImageView
                    android:id="@+id/arro_for_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:layout_marginRight="20dp"/>





            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view1_privacy"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E4E4E4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraint_lastseen"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_profile_photo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view1_privacy">




                <TextView
                    android:id="@+id/text_profile_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile Photo"
                    android:textSize="16sp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginLeft="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/black"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Everyone"
                    app:layout_constraintStart_toStartOf="@+id/text_profile_photo"
                    app:layout_constraintTop_toBottomOf="@+id/text_profile_photo"
                    android:textColor="#555555"
                    android:textSize="11sp"
                    android:layout_marginTop="-4dp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/poppins_regular"
                    />



                <ImageView
                    android:id="@+id/arr_for_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:layout_marginRight="20dp"/>





            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view2_privacy"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E4E4E4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraint_profile_photo"/>




            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_online_status"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2_privacy">




                <TextView
                    android:id="@+id/text_online_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online Status "
                    android:textSize="16sp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginLeft="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My contacts except"
                    app:layout_constraintStart_toStartOf="@+id/text_online_status"
                    app:layout_constraintTop_toBottomOf="@+id/text_online_status"
                    android:textColor="#555555"
                    android:textSize="11sp"
                    android:layout_marginTop="-4dp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/poppins_regular"
                    />

                <ImageView
                    android:id="@+id/arrow_for_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:layout_marginRight="20dp"/>





            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view3_privacy"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#E4E4E4"
                app:layout_constraintTop_toBottomOf="@id/constraint_online_status"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_group_privacy"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3_privacy">




                <TextView
                    android:id="@+id/text_group_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group Privacy "
                    android:textSize="16sp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginLeft="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Every one "
                    app:layout_constraintStart_toStartOf="@+id/text_group_privacy"
                    app:layout_constraintTop_toBottomOf="@+id/text_group_privacy"
                    android:textColor="#555555"
                    android:textSize="11sp"
                    android:layout_marginTop="-4dp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/poppins_regular"
                    />


                <ImageView
                    android:id="@+id/aro_for_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:layout_marginRight="20dp"/>




            </androidx.constraintlayout.widget.ConstraintLayout>



            <View
                android:id="@+id/view4_privacy"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#E4E4E4"
                app:layout_constraintTop_toBottomOf="@id/constraint_group_privacy"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_groups"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view4_privacy">




                <TextView
                    android:id="@+id/text_groups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Groups"
                    android:textSize="16sp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginLeft="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Everyone"
                    app:layout_constraintStart_toStartOf="@+id/text_groups"
                    app:layout_constraintTop_toBottomOf="@+id/text_groups"
                    android:textColor="#555555"
                    android:textSize="11sp"
                    android:layout_marginTop="-4dp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/poppins_regular"
                    />


                <ImageView
                    android:id="@+id/arow_for_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:layout_marginRight="20dp"/>




            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:id="@+id/view5_privacy"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#E4E4E4"
                app:layout_constraintTop_toBottomOf="@id/constraint_groups"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_privacy_btnswitch"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view5_privacy">




                <TextView
                    android:id="@+id/text_read_recipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Read receipts"
                    android:textSize="16sp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginLeft="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:buttonTint="@color/light_green"
                    app:layout_constraintTop_toTopOf="parent"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="280dp"
                    android:layout_height="70dp"
                    app:layout_constraintTop_toBottomOf="@+id/text_read_recipt"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="25dp">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/privacy_switch"
                        android:textColor="#555555"
                        android:textSize="11sp"
                        android:layout_marginTop="-4dp"
                        android:textFontWeight="400"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>



                </androidx.constraintlayout.widget.ConstraintLayout>





            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view6_privacy"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#E4E4E4"
                app:layout_constraintTop_toBottomOf="@id/constraint_privacy_btnswitch"/>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_live_location"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view6_privacy">




                <TextView
                    android:id="@+id/text_live_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Live Location"
                    android:textSize="16sp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginLeft="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Everyone"
                    app:layout_constraintStart_toStartOf="@+id/text_live_location"
                    app:layout_constraintTop_toBottomOf="@+id/text_live_location"
                    android:textColor="#555555"
                    android:textSize="11sp"
                    android:layout_marginTop="-4dp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/poppins_regular"
                    />

                <ImageView
                    android:id="@+id/arrow_for_goo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:layout_marginRight="20dp"/>



            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view7_privacy"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#E4E4E4"
                app:layout_constraintTop_toBottomOf="@id/constraint_live_location"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_blocked_contact"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view7_privacy">




                <TextView
                    android:id="@+id/text_blocked_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blocked Contacts"
                    android:textSize="16sp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginLeft="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="56 People"
                    app:layout_constraintStart_toStartOf="@+id/text_blocked_contact"
                    app:layout_constraintTop_toBottomOf="@+id/text_blocked_contact"
                    android:textColor="#555555"
                    android:textSize="11sp"
                    android:layout_marginTop="-4dp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/poppins_regular"
                    />

                <ImageView
                    android:id="@+id/arrow_forgo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:layout_marginRight="20dp"/>




            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:id="@+id/view8_privacy"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#E4E4E4"
                app:layout_constraintTop_toBottomOf="@id/constraint_blocked_contact"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>