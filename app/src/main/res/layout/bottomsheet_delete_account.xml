<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/curv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingBottom="30dp"
        android:orientation="vertical">

        <View
            android:layout_width="90dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:background="@drawable/grey_curve_box" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Delete account"
            android:textColor="@color/black"
            android:textFontWeight="500"
            android:textSize="17dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you want to really delete your account ?"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="20dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            >


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnok_delete_account"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:background="@drawable/button_background"
            android:ems="7"
            android:gravity="center"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="25dp"
            android:text="OK"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnok_delete_cancel"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:background="@drawable/button_gray_bg"
                android:ems="7"
                android:gravity="center"
                android:fontFamily="@font/poppins_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="25dp"
                android:text="Cancel"
                android:textColor="#555555"
                android:textAllCaps="false"
                android:textFontWeight="500"
                android:textSize="14sp" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>



</RelativeLayout>