<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navConstraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <SearchView
     android:visibility="gone"
        android:id="@+id/search_g"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/outline_square_grey_trans"
        android:iconifiedByDefault="false"
        android:searchIcon="@drawable/search_icon"
        android:layoutDirection="rtl"
        android:queryBackground="@null"
        android:queryHint="Search posted ads"
        app:theme="@style/AppSearchView" />

    <RelativeLayout
        android:paddingEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/outline_square_grey_trans">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="25dp"
            android:background="@null"
            android:hint="Search posted ads"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/search_icon" />
    </RelativeLayout>
        <RelativeLayout
        android:id="@+id/to_bizpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_bordered_ripple"
        android:clickable="true"
        android:focusable="true"
        android:padding="15dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:elevation="10dp"
            android:src="@drawable/gong" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Gong Advertisement"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Health &amp; care"
                android:textColor="#333333"
                android:textFontWeight="400"
                android:textSize="13dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <RelativeLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/green_oval">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textFontWeight="700"
                    android:textSize="13dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/to_marketplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_bordered_ripple"
        android:clickable="true"
        android:focusable="true"
        android:padding="15dp">

        <androidx.cardview.widget.CardView
            android:id="@id/image1"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/sofa"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Heimer Miller"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Food &amp; drink"
                android:textColor="#333333"
                android:textFontWeight="400"
                android:textSize="13dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <RelativeLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/green_oval">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.2dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textFontWeight="700"
                    android:textSize="13dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/to_unknown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/custom_bordered_ripple"
        android:clickable="true"
        android:focusable="true">


        <ImageView
            android:id="@+id/pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:elevation="10dp"
            android:src="@drawable/pic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/pic"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Coffee N' Go"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:background="#FFC700"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Selling "
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="12dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textFontWeight="400"
                    android:textSize="12dp"
                    android:text="  Hotels &amp; restur..."/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">


            <RelativeLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/green_oval">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1.2dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textFontWeight="700"
                    android:textSize="13dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>