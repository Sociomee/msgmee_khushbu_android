<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SocialChat.GalleryBrightness">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="15dp">


        <LinearLayout
            android:id="@+id/back_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/close_gallery"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="-1dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />

            <TextView
                android:id="@+id/title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:fontFamily="@font/poppins_bold"
                android:gravity="bottom"
                android:text="Filter"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="19dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_regular"
            android:text="NEXT"
            android:textColor="@color/light_green"
            android:textFontWeight="500"
            android:textSize="17dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:elevation="10dp"
        android:background="#E3F4EA" />

    <RelativeLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/header"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/men" />



    <!--    Filter View-->
    <LinearLayout
        android:id="@+id/filter_view"
        android:layout_below="@+id/main_view"
        android:layout_above="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:paddingVertical="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Normal"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:textFontWeight="500" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/gllery"/>

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:paddingVertical="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Clarendon"
                android:textColor="@color/gray"
                android:textSize="13dp"
                android:textFontWeight="500" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/gllery"/>

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:paddingVertical="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Gingham"
                android:textColor="@color/gray"
                android:textSize="13dp"
                android:textFontWeight="500" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/gllery"/>

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:paddingVertical="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Nature"
                android:textColor="@color/gray"
                android:textSize="13dp"
                android:textFontWeight="500" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/gllery"/>

        </LinearLayout>
    </LinearLayout>

    <!--    Trim View-->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/trim_view"
        android:layout_below="@+id/main_view"
        android:layout_above="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/trim_waves" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-31dp"
            android:src="@drawable/trim_edit" />
    </RelativeLayout>

    <!--    Cover View-->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/cover_view"
        android:layout_below="@+id/main_view"
        android:layout_above="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/cover_edit" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/filter_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="FILTER"
                android:textColor="@color/black"
                android:textFontWeight="400" />

            <TextView
                android:id="@+id/trim_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="TRIM"
                android:textColor="#9D9D9D"
                android:textFontWeight="500" />
            <TextView
                android:id="@+id/cover_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="COVER"
                android:textColor="#9D9D9D"
                android:textFontWeight="500" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <View
                android:layout_weight="1"
                android:id="@+id/filter_bar"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@color/black" />

            <View
                android:visibility="invisible"
                android:layout_weight="1"
                android:id="@+id/trim_bar"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/black"
                />

            <View
                android:visibility="invisible"
                android:layout_weight="1"
                android:id="@+id/cover_bar"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@color/black" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>