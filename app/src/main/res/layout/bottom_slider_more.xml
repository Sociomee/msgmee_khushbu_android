<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/curv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <View
            android:layout_width="80dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:background="#C4C4C4" />

        <LinearLayout
            android:id="@+id/neww"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bordered_ripple"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <TextView
                android:text="New Message"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/poppins_regular"
                android:textFontWeight="400"
                android:textSize="15dp"
                android:textColor="#4F4F4F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3F4EA"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bordered_ripple"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <TextView
                android:text="Make a Call"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/poppins_regular"
                android:textFontWeight="400"
                android:textSize="15dp"
                android:textColor="#4F4F4F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3F4EA"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/gp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bordered_ripple"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <TextView
                android:text="Create New Group"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/poppins_regular"
                android:textFontWeight="400"
                android:textSize="15dp"
                android:textColor="#4F4F4F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3F4EA"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/broadcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bordered_ripple"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <TextView
                android:text="Create a Broadcast"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/poppins_regular"
                android:textFontWeight="400"
                android:textSize="15dp"
                android:textColor="#4F4F4F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3F4EA"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bordered_ripple"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <TextView
                android:text="Blocked Users Lists"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/poppins_regular"
                android:textFontWeight="400"
                android:textSize="15dp"
                android:textColor="#4F4F4F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3F4EA"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/syncing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bordered_ripple"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <TextView
                android:text="Sync your SocioMee connections"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/poppins_regular"
                android:textFontWeight="400"
                android:textSize="15dp"
                android:textColor="#4F4F4F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="-3dp"
                android:text="last synced 10 May, 22"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/poppins_regular"
                android:textFontWeight="400"
                android:textSize="11dp"
                android:textColor="#4F4F4F"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3F4EA"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bordered_ripple"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <TextView
                android:text="Settings"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/poppins_regular"
                android:textFontWeight="400"
                android:textSize="15dp"
                android:textColor="#4F4F4F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3F4EA"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/log_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bordered_ripple"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <TextView
                android:text="Logout"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/poppins_regular"
                android:textFontWeight="400"
                android:textSize="15dp"
                android:textColor="#4F4F4F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3F4EA"/>

        </LinearLayout>







    </LinearLayout>



</RelativeLayout>