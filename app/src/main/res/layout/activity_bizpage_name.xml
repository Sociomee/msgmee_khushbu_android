            <RelativeLayout
                android:id="@+id/add_person_action_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="-25dp"
                android:background="@drawable/green_curve_box"
                android:backgroundTint="#D5D0D0"
                android:paddingHorizontal="30dp"
                android:paddingVertical="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Contact"
                    android:textColor="#000000"
                    android:textFontWeight="400"
                    android:textSize="14dp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/media_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#FF822E"
                app:elevation="2dp"
                app:fabSize="mini"
                app:pressedTranslationZ="12dp"
                app:srcCompat="@drawable/ic_baseline_photo_size_select_actual_24"
                app:tint="@android:color/white" />

            <RelativeLayout
                android:id="@+id/media_action_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="-25dp"
                android:background="@drawable/green_curve_box"
                android:backgroundTint="#F3C2EE"
                android:paddingHorizontal="30dp"
                android:paddingVertical="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Media"
                    android:textColor="#000000"
                    android:textFontWeight="400"
                    android:textSize="14dp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/doc_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#56CCF2"
                app:elevation="3dp"
                app:fabSize="mini"
                app:pressedTranslationZ="12dp"
                app:srcCompat="@drawable/doc"
                app:tint="@android:color/white" />

            <RelativeLayout
                android:id="@+id/doc_action_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="-25dp"
                android:background="@drawable/green_curve_box"
                android:backgroundTint="#96E4DF"
                android:paddingHorizontal="30dp"
                android:paddingVertical="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Document"
                    android:textColor="#000000"
                    android:textFontWeight="400"
                    android:textSize="14dp" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fab_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true">
        <!--    FOOTER DIV-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3F4EA"/>


        <!--    ORIGINAL FOOTER-->
        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="15dp">


            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/add_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:backgroundTint="#F5F5F5"
                app:collapsedSize="30dp"
                app:icon="@drawable/ic_baseline_attach_file_24"
                app:iconSize="20dp"
                app:tint="@android:color/white" />

            <RelativeLayout
                android:id="@+id/camera"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/add_fab"
                android:background="@drawable/grey_circle">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/camera" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@drawable/grey_circle">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_baseline_mic_none_24" />
            </RelativeLayout>

            <!--        Normal Keyboard -->
            <RelativeLayout
                android:id="@+id/normal_keyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="10dp"
                android:layout_toLeftOf="@id/mic"
                android:layout_toRightOf="@id/camera"
                android:background="@drawable/grey_curve_box"
                android:padding="5dp"
                android:paddingStart="10dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Type your message"
                    android:textColor="@color/black"
                    android:textColorHint="#999999"
                    android:textFontWeight="400"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_baseline_emoji_emotions_24" />
            </RelativeLayout>

            <!--Reply KeyBoard-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/reply_keyboard"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="10dp"
                android:layout_toLeftOf="@id/mic"
                android:layout_toRightOf="@id/camera"
                android:background="@drawable/grey_curve_box"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="5dp"
                android:paddingTop="5dp">

                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1.8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:background="@drawable/white_curve_box"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textFontWeight="600"
                            android:textSize="11dp"
                            android:textColor="#555555"
                            android:text="Sonali Singh"/>

                        <TextView
                            android:fontFamily="@font/poppins_regular"
                            android:textFontWeight="400"
                            android:textSize="11dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Just fixed the new update issue"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_close_24"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Type your message"
                        android:textColor="@color/black"
                        android:textColorHint="#999999"
                        android:textFontWeight="400"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_emoji_emotions_24" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <!--    AUDIO FOOTER-->
    </LinearLayout>

</RelativeLayout>