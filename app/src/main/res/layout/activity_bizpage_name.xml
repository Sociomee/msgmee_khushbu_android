                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="Waiting"
                                    android:textColor="#FFFFFF"
                                    android:textFontWeight="500"
                                    android:textSize="11dp" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="-10dp"
                        android:layout_marginRight="-3dp"
                        android:src="@drawable/clock" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/unread"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chat">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:background="#8BC681" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/green_curve_box"
                    android:gravity="center"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="2 new messages"
                        android:textColor="@color/white"
                        android:textFontWeight="600"
                        android:textSize="13dp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/user_unblocked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chat"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:background="#8BC681" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/green_curve_box"
                    android:gravity="center"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="User blocked. Tap to unblock"
                        android:textColor="@color/white"
                        android:textFontWeight="600"
                        android:textSize="13dp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </RelativeLayout>

            <!--    Send Contact -->
            <LinearLayout
                android:id="@+id/send_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/unread"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grey_curve_box"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="25dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/pic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Joy Arthur"
                            android:textFontWeight="600"
                            android:textSize="19dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E3F4EA" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="25dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/open_sans_semibold"
                            android:gravity="center"
                            android:text="Add to Contacts"
                            android:textColor="@color/black"
                            android:textFontWeight="600"
                            android:textSize="15dp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

