<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings.SyncingInvite_Activity">

    <LinearLayout
        android:id="@+id/linear_syncing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:id="@+id/chats_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            >


            <ImageView
                android:id="@+id/img_back_arow"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:outlineAmbientShadowColor="@color/black"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_back_arow"
                android:fontFamily="@font/poppins_bold"
                android:text="Syncing and Invite"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="18dp"
                android:textStyle="bold" />

        </RelativeLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:elevation="10dp"
            android:background="#E0E0E0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chats_setting"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_share_link"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_syncing">




        <TextView
            android:id="@+id/text_share_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share link"
            android:textSize="16sp"
            android:textFontWeight="500"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginLeft="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/img_go_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            android:layout_marginRight="20dp"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="280dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/text_share_link"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share_link"
                android:textColor="#555555"
                android:textSize="11sp"
                android:textFontWeight="400"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view1_syncing"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#E4E4E4"
        app:layout_constraintTop_toBottomOf="@id/constraint_share_link"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_sync_sociomee"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1_syncing">




        <TextView
            android:id="@+id/text_sync_sociomee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sync to SocioMee"
            android:textSize="16sp"
            android:textFontWeight="400"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginLeft="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toTopOf="parent"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="280dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@+id/text_sync_sociomee"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sync_sociomee"
                android:textColor="#555555"
                android:textSize="11sp"
                android:textFontWeight="400"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view2_syncing"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#E4E4E4"
        app:layout_constraintTop_toBottomOf="@id/constraint_sync_sociomee"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_invite_contact"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view2_syncing">




        <TextView
            android:id="@+id/text_invite_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite Contact"
            android:textSize="16sp"
            android:textFontWeight="500"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginLeft="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/img_go_arro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            android:layout_marginRight="20dp"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="280dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@+id/text_invite_contact"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You can sync your Contact"
                android:textColor="#555555"
                android:textSize="11sp"
                android:textFontWeight="400"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view3_syncing"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#E4E4E4"
        app:layout_constraintTop_toBottomOf="@id/constraint_invite_contact"/>

</androidx.constraintlayout.widget.ConstraintLayout>