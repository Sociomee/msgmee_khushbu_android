<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curv"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <View
            android:layout_width="80dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:background="@drawable/grey_curve_box" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="Schedule Chat Backup"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:orientation="vertical"
        android:paddingBottom="25dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mobiledata_nomedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="25dp"
                android:paddingEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <RadioButton
                    android:id="@+id/radiobtn_everyhour"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:buttonTint="@color/light_green"
                    android:fontFamily="@font/poppins_regular"
                    android:background="@drawable/custom_bordered_ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:layoutDirection="rtl"
                    android:text="Every Hour"
                    android:textFontWeight="400"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E3F4EA"
                    app:layout_constraintTop_toBottomOf="@+id/mobiledata_nomedia" />


                <RadioButton
                    android:id="@+id/radiobtn_every4hour"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:buttonTint="@color/light_green"
                    android:fontFamily="@font/poppins_regular"
                    android:layoutDirection="rtl"
                    android:text="Every 4 hours"
                    android:textFontWeight="400"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E3F4EA"
                    app:layout_constraintTop_toBottomOf="@+id/radiobtn_every4hour" />


                <RadioButton
                    android:id="@+id/radiobtn_everyday"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:buttonTint="@color/light_green"
                    android:fontFamily="@font/poppins_regular"
                    android:layoutDirection="rtl"
                    android:text="Everyday"
                    android:textFontWeight="400"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E3F4EA"
                    app:layout_constraintTop_toBottomOf="@+id/radiobtn_everyday" />


                <RadioButton
                    android:id="@+id/radiobtn_everyweek"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:buttonTint="@color/light_green"
                    android:fontFamily="@font/poppins_regular"
                    android:layoutDirection="rtl"
                    android:text="Every week"
                    android:textFontWeight="400"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E3F4EA"
                    app:layout_constraintTop_toBottomOf="@+id/radiobtn_everyweek" />


                <RadioButton
                    android:id="@+id/radiobtn_everymonth"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:buttonTint="@color/light_green"
                    android:fontFamily="@font/poppins_regular"
                    android:layoutDirection="rtl"
                    android:text="Every month"
                    android:textFontWeight="400"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E3F4EA"
                    app:layout_constraintTop_toBottomOf="@+id/radiobtn_everymonth" />


                <RadioButton
                    android:id="@+id/radiobtn_backup"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:buttonTint="@color/light_green"
                    android:fontFamily="@font/poppins_regular"
                    android:layoutDirection="rtl"
                    android:text="Only when i back up"
                    android:textFontWeight="400"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E3F4EA"
                    app:layout_constraintTop_toBottomOf="@+id/radiobtn_backup" />


            </RadioGroup>


        </androidx.constraintlayout.widget.ConstraintLayout>




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnok_chatbackup"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:ems="15"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="OK"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="14sp" />


